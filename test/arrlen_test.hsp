#deffunc arrlenTest_eq_ran array arr, int _value, int x_lb, int x_ub, \
	local value, local eq_ran
	
	value = _value
	arrlen_equal_range arr, length(arr), value, eq_ran(0), eq_ran(1)
	assert eq_ran(0) == x_lb
	assert eq_ran(1) == x_ub
	return
	
#deffunc arrlenTest_sorted_insert \
	array _arr, int _value, int can_dup, \
	int x_lb, int x_ub, int x_c,        \
	local arr, local len, local value, local lb, local ub
	
	arrlen_copy arr, len,  _arr, length(_arr)
	value = _value
	arrlenSorted_insert_v arr, len, value, can_dup
	assert stat == x_c
	
	arrlen_equal_range arr, len, value, lb, ub
	assert lb == x_lb
	assert ub == x_ub
	return
	
#deffunc arrlenTest_sorted_erase array _arr, int _value, int max_count,  int x_lb, int x_ub, int x_c, \
	local arr, local value, local lb, local ub
	
	arrlen_copy arr, len,  _arr, length(_arr)
	value = _value
	arrlenSorted_erase_v arr, len, value, max_count
	assert stat == x_c
	
	arrlen_equal_range arr, len, value, lb, ub
	assert lb == x_lb
	assert ub == x_ub
	return
	
